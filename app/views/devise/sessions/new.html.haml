.body
  .hedar
    .hedar_img
      = image_tag 'logo.png'
  .login-panel
    .login-panel_main
      .login-panel__new-account
        %p アカウントをお持ちでない方はこちら
        = link_to"新規会員登録"
        -# = render "devise/shared/links"
      %h2 
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field_login
          = f.email_field :email, class: "",autofocus: true, autocomplete: "email",placeholder: "メールアドレス", value: ""
        .field_login
          = f.password_field :password, class: "field_login_input",autocomplete: "current-password", placeholder: "パスワード", value: ""
        - if devise_mapping.rememberable?
          .login-submit
            = f.submit "ログイン",class: "login-submit__btn"

        = link_to "パスワードをお忘れの方", class: "forgot-password"
        %footer.single-footer
    .user-footer
      %nav
        %ul
          %li
            %a プライバシーポリシー 
          %li
            %a フリマ利用規約
          %li
            %a 特定商品に関する表記 
        = image_tag 'logo-white.png',size: '250x100'
