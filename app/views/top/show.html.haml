.confirmation__header
  = image_tag "logo.png", size: "185x49"

.confirmation__contents__main
  .confirmation__contents__main__middle
    .confirmation__contents__main__middle__head
      購入内容の確認
    .confirmation__contents__main__middle__heart
      .confirmation__contents__main__middle__heart__upload-box
        .confirmation__contents__main__middle__heart__upload-box__title
          出品画像
        .confirmation__contents__main__middle__heart__upload-box__explain
          最大10枚までアップロードできます
        .confirmation__contents__main__middle__heart__upload-box__item
          %b
            ドラッグアンドドロップ
            %br 
            またはクリックしてファイルをアップロード
      .confirmation__contents__main__middle__heart__sell-content
        .confirmation__contents__main__middle__heart__sell-content__form-one
          商品名
          = form_for "aaa" do |f|
            = f.text_field :content, class: 'confirmation__contents__main__middle__heart__sell-content__form-group__name', placeholder: '  商品名 (必須40文字まで)'
        .confirmation__contents__main__middle__heart__sell-content__form-group
          商品の説明
          = form_for "aaa" do |f|
            = f.text_area :content, class: 'confirmation__contents__main__middle__heart__sell-content__form-group__explain', placeholder: '商品名 （商品の説明(必須1,000文字以内）（色、素材、重さ、定価、注意点など）例）   2010年頃に1万円に購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。）'
      .confirmation__contents__main__middle__heart__detail
        商品の詳細
        .confirmation__contents__main__middle__heart__detail__sell-form-box
          .confirmation__contents__main__middle__heart__detail__sell-form-box__category
            カテゴリー
            = form_for 'aa' do |f|
              = f.select :theme, [ ["レディース",1], ["メンズ", 2], ["ベビー・キッズ", 3], ["インテリア・住まい・小物", 4], ["本・音楽・ゲーム", 5], ["おもちゃ・ホビー・グッズ", 6], ["コスメ・香水・美容", 7], ["家電・スマホ・カメラ", 8] ,["スポーツ・レジャー", 9], ["ハンドメイド", 10], ["チケット", 11], ["自動車・オートバイ", 12], ["その他", 13] ], prompt: "---", id: 'aa_theme'
          .confirmation__contents__main__middle__heart__detail__sell-form-box__status
            商品の状態
            = form_for 'aa' do |f|
              = f.select :theme, [ ["新品、未使用",1], ["未使用に近い", 2], ["目立った傷や汚れなし", 3], ["やや傷や汚れなし", 4], ["傷や汚れなし", 5], ["傷や汚れあり", 6], ["全体的に状態が悪い", 7] ], prompt: "---", id: 'aa_theme'
      .confirmation__contents__main__middle__heart__delivery
        配送について
        .confirmation__contents__main__middle__heart__delivery__sell-form-box
          配送料の負担
          = form_for 'aa' do |f|
            = f.select :theme, [ ["送料込み(出品者負担)",1], ["着払い(購入者負担)", 2] ], prompt: "---", id: 'aa_theme'
          .confirmation__contents__main__middle__heart__delivery__sell-form-box__area
            発送元の地域
            = form_for 'aa' do |f|
              = f.select :theme, [ ["北海道",1], ["青森県", 2], ["岩手県", 3], ["宮城県", 4], ["秋田県", 5], ["山形県", 6], ["福島県", 7], ["茨城県", 8], ["栃木県", 9], ["群馬県", 10], ["埼玉県", 11], ["千葉県", 12], ["東京都", 13], ["神奈川県", 14], ["新潟県", 15], ["富山県", 16], ["石川県", 17], ["福井県", 18], ["山梨県", 19], ["長野県", 20], ["岐阜県", 21], ["静岡県", 22], ["愛知県", 23], ["三重県", 24], ["滋賀県", 25], ["京都府", 26], ["大阪府", 27], ["京都府", 28], ["奈良県", 29], ["和歌山県", 30], ["鳥取県", 31], ["島根県", 32], ["岡山県", 33], ["広島県", 34], ["山口県", 35], ["徳島県", 36], ["香川県", 37], ["愛媛県", 38], ["高知県", 39], ["福岡県", 40], ["佐賀県", 41], ["長崎県", 42], ["熊本県", 43], ["大分県", 44], ["宮崎県", 45], ["鹿児島県", 46], ["沖縄県", 47], ["未定", 48] ], prompt: "---", id: 'aa_theme'
          .confirmation__contents__main__middle__heart__delivery__sell-form-box__date
            発送までの日数
            = form_for 'aa' do |f|
              = f.select :theme, [ ["1~2日で発送",1], ["2~3日で発送", 2], ["4~7日で発送", 2] ], prompt: "---", id: 'aa_theme'
      .confirmation__contents__main__middle__heart__money
        販売価格(300~9,999,999)
        .confirmation__contents__main__middle__heart__money__sell-box
          .confirmation__contents__main__middle__heart__money__sell-box__form-group
            .confirmation__contents__main__middle__heart__money__sell-box__form-group__left
              価格
            .confirmation__contents__main__middle__heart__money__sell-box__form-group__right
              ¥
              .confirmation__contents__main__middle__heart__money__sell-box__form-group__right__money
                = form_for "aaa" do |f|
                  = f.text_field :content, class: 'right__money', placeholder: '例） 300   '
          .confirmation__contents__main__middle__heart__money__sell-box__margin
            .confirmation__contents__main__middle__heart__money__sell-box__margin__left
              販売手数料(10%)
            .confirmation__contents__main__middle__heart__money__sell-box__margin__right
              あああ
          .confirmation__contents__main__middle__heart__money__sell-box__benefit
            .confirmation__contents__main__middle__heart__money__sell-box__benefit__left
              販売利益
            .confirmation__contents__main__middle__heart__money__sell-box__benefit__right
              ¥ あああ
          .confirmation__contents__main__middle__heart__money__sell-box__bene



